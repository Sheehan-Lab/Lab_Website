---
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sheehan Lab at Emory University - Advancing sickle cell disease research" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<Navigation />
		<slot />
		<footer>
			<div class="footer-content">
				<div class="footer-info">
					<h3>Sheehan Lab</h3>
					<p>Emory University School of Medicine</p>
					<p>Department of Pediatrics</p>
				</div>
				<div class="footer-links">
					<a href="/contact">Contact</a>
					<a href="/publications">Publications</a>
					<a href="/research">Research</a>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	/* Modern Medical/Tech Color Palette */
	--primary: #2C5282;    /* Deep Blue */
	--secondary: #38B2AC;  /* Teal */
	--accent: #805AD5;     /* Purple */
	--neutral: #4A5568;    /* Cool Gray */
	--background: #F7FAFC;
	--surface: #FFFFFF;
	--error: #E53E3E;
	--success: #38A169;
	
	/* Text Colors */
	--text-primary: #2D3748;
	--text-secondary: #4A5568;
	--text-light: #A0AEC0;
	
	/* Gradients */
	--gradient-primary: linear-gradient(135deg, var(--primary), var(--accent));
	--gradient-surface: linear-gradient(135deg, var(--surface), #F7FAFC);

	/* Add global animations */
	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(20px); }
		to { opacity: 1; transform: translateY(0); }
	}

	@keyframes slideIn {
		from { transform: translateX(-20px); opacity: 0; }
		to { transform: translateX(0); opacity: 1; }
	}

	/* Add smooth scrolling */
	html {
		font-family: 'Inter', system-ui, -apple-system, sans-serif;
		background: var(--background);
		color: var(--text-primary);
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	h1, h2, h3, h4, h5, h6 {
		color: var(--text-primary);
		line-height: 1.2;
		margin: 0 0 1rem 0;
	}

	p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin: 0 0 1rem 0;
	}

	img {
		max-width: 100%;
		height: auto;
	}

	footer {
		background: var(--accent);
		color: white;
		padding: 3rem 0;
		margin-top: auto;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 2rem;
	}

	.footer-info h3 {
		color: white;
		margin-bottom: 1rem;
	}

	.footer-info p {
		color: rgba(255, 255, 255, 0.8);
		margin: 0.5rem 0;
	}

	.footer-links {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.footer-links a {
		color: white;
		text-decoration: none;
		transition: opacity 0.2s;
	}

	.footer-links a:hover {
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.footer-links {
			align-items: center;
		}
	}
</style>
