---
import Navigation from '../components/Navigation.astro';
import SEO from '../components/SEO.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: 'website' | 'article';
}

const { 
	title, 
	description = "The Sheehan Lab at Emory University is dedicated to advancing sickle cell disease research and treatment through innovative approaches in genomics, clinical research, and biomarker development.",
	image,
	type = 'website'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<SEO 
			title={title}
			description={description}
			image={image}
			type={type}
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Navigation />
		<Breadcrumbs />
		<main id="main-content">
			<slot />
		</main>
		<footer>
			<div class="footer-content">
				<div class="footer-info">
					<h2>Sheehan Lab</h2>
					<p>Emory University School of Medicine</p>
					<p>Department of Pediatrics</p>
					<address class="footer-address">
						Health Sciences Research Building (HSRB)<br />
						Room E397<br />
						1760 Haygood Drive NE<br />
						Atlanta, GA 30322
					</address>
				</div>
				<nav class="footer-links" aria-label="Footer Navigation">
					<h3>Quick Links</h3>
					<a href="/research">Research</a>
					<a href="/publications">Publications</a>
					<a href="/team">Our Team</a>
					<a href="/mentorship">Mentorship</a>
					<a href="/positions">Open Positions</a>
					<a href="/contact">Contact</a>
				</nav>
				<div class="footer-connect">
					<h3>Connect</h3>
					<a href="mailto:vivien.sheehan@emory.edu" class="email-link">
						<span class="icon">✉</span> Email Us
					</a>
				</div>
			</div>
			<section class="disclaimer-section">
				<div class="disclaimer">
					<p>This website is maintained by the Sheehan Lab at Emory University. The content and opinions expressed on this website are those of the authors and do not necessarily reflect the views of Emory University.</p>
					<p class="copyright">© {new Date().getFullYear()} Sheehan Lab. All rights reserved.</p>
				</div>
			</section>
		</footer>

		<style is:global>
			:root {
				--emory-primary: #012169;
				--emory-accent: #f2a900;
				--text-primary: #2d3748;
				--text-secondary: #4a5568;
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			html {
				font-family: 'Inter', system-ui, sans-serif;
				background: #ffffff;
				color: var(--text-primary);
			}

			body {
				min-height: 100vh;
				display: flex;
				flex-direction: column;
			}

			main {
				flex: 1;
			}

			img {
				max-width: 100%;
				height: auto;
			}

			footer {
				background: var(--emory-primary);
				color: white;
				padding: 4rem 0 0;
				margin-top: auto;
				display: flex;
				flex-direction: column;
			}

			.footer-content {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 2rem 2rem;
				display: grid;
				grid-template-columns: 2fr 1fr 1fr;
				gap: 3rem;
				width: 100%;
			}

			.footer-info h2 {
				color: white;
				margin-bottom: 1rem;
				font-size: 1.5rem;
			}

			.footer-info p {
				color: rgba(255, 255, 255, 0.8);
				margin: 0.25rem 0;
			}

			.footer-address {
				margin-top: 1.5rem;
				color: rgba(255, 255, 255, 0.8);
				font-style: normal;
				line-height: 1.6;
			}

			.footer-links h3,
			.footer-connect h3 {
				color: white;
				font-size: 1.2rem;
				margin-bottom: 1rem;
			}

			.footer-links {
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
			}

			.footer-links a,
			.footer-connect a {
				color: rgba(255, 255, 255, 0.8);
				text-decoration: none;
				transition: color 0.2s;
			}

			.footer-links a:hover,
			.footer-connect a:hover {
				color: var(--emory-accent);
			}

			.email-link {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.disclaimer-section {
				width: 100%;
				background: rgba(0, 0, 0, 0.4);
				margin-top: 3rem;
			}

			.disclaimer {
				max-width: 1200px;
				margin: 0 auto;
				padding: 1.5rem 2rem;
				text-align: center;
			}

			.disclaimer p {
				color: rgba(255, 255, 255, 0.9);
				font-size: 0.9rem;
				margin-bottom: 1rem;
			}

			.disclaimer .copyright {
				margin-bottom: 0;
				color: rgba(255, 255, 255, 0.7);
			}

			@media (max-width: 768px) {
				.footer-content {
					grid-template-columns: 1fr;
					text-align: center;
					gap: 2rem;
					padding: 0 1rem;
				}

				.footer-address {
					margin: 1rem auto;
					max-width: 300px;
				}

				.footer-links {
					align-items: center;
				}

				.email-link {
					justify-content: center;
				}

				footer {
					padding: 2rem 0 0;
				}

				.disclaimer {
					padding: 1rem;
				}

				.disclaimer p {
					font-size: 0.8rem;
				}
			}
		</style>
	</body>
</html>
