---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Sheehan Lab">
  <main>
    <section class="page-header">
            <div class="container">
        <h1>Contact Us</h1>
        <p>We'd love to hear from you. Whether you have research inquiries, collaboration opportunities, or would like to learn more about our work, feel free to reach out.</p>
      </div>
    </section>

    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">
          <div class="left-column">
            <div class="contact-info">
              <h2>Get in Touch</h2>
              <p>Email: <a href="mailto:vivien.sheehan@emory.edu">vivien.sheehan@emory.edu</a></p>
              <p class="address">
                <strong>Lab Location:</strong>
                <br />
                Room E397
                <br />
                Health Sciences Research Building (HSRB)
                <br />
                1760 Haygood Drive NE
                <br />
                Atlanta, GA 30322
                <br />
                United States
              </p>
            </div>
            <div class="map-container">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1654.4477831391385!2d-84.31733832999721!3d33.79448279653842!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88f506f7d0f78b89%3A0x5b65d7e5ad7a8f12!2sHealth%20Sciences%20Research%20Building!5e0!3m2!1sen!2sus!4v1699987233657!5m2!1sen!2sus"
                width="100%"
                height="300"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
              </iframe>
            </div>
          </div>
          <form 
            name="contact" 
            method="POST" 
            class="contact-form" 
            data-netlify="true"
            netlify-honeypot="bot-field"
          >
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>
            <input type="hidden" name="form-name" value="contact" />
            
            <label for="name">Name *</label>
            <input type="text" id="name" name="name" required />

            <label for="email">Email *</label>
            <input type="email" id="email" name="email" required />

            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" />

            <label for="message">Message *</label>
            <textarea id="message" name="message" rows="5" required></textarea>

            <button type="submit" class="submit-button">Send Message</button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <style>
    .page-header {
      background: var(--emory-primary);
      color: white;
      padding: 6rem 2rem 2rem;
      margin-top: 60px;
      text-align: center;
    }

    .page-header h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: white;
    }

    .page-header p {
      color: white;
    }

    .contact-section {
      padding: 4rem 2rem;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      max-width: 1200px;
      margin: 0 auto;
      animation: fadeIn 0.8s ease forwards;
    }

    .left-column {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .contact-info {
      background: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .contact-info h2 {
      color: var(--emory-primary);
      margin-bottom: 1rem;
    }

    .contact-info a {
      color: var(--emory-accent);
      text-decoration: none;
      transition: color 0.2s;
    }

    .contact-info a:hover {
      color: var(--emory-primary);
    }

    .contact-form {
      display: flex;
      flex-direction: column;
      background: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      animation: fadeIn 1s ease forwards;
    }

    .contact-form label {
      margin: 0.5rem 0 0.25rem;
      font-weight: 500;
    }

    .contact-form input,
    .contact-form textarea {
      padding: 0.75rem;
      margin-bottom: 1rem;
      border: 1px solid #ddd;
      border-radius: 4px;
      transition: border-color 0.2s;
      font-size: 1rem;
    }

    .contact-form input:focus,
    .contact-form textarea:focus {
      outline: none;
      border-color: var(--emory-primary);
    }

    .submit-button {
      background: transparent;
      color: var(--emory-primary);
      padding: 0.8rem 1.5rem;
      border: 1px solid var(--emory-primary);
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.3s ease;
      font-size: 1rem;
      font-weight: 500;
      width: fit-content;
      align-self: flex-end;
    }

    .submit-button:hover {
      background: var(--emory-primary);
      color: white;
      transform: translateY(-2px);
    }

    .map-container {
      width: 100%;
      height: 300px;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .address {
      line-height: 1.8;
      margin-top: 1.5rem;
    }

    .address strong {
      color: var(--emory-primary);
      font-size: 1.1rem;
    }

    @media (max-width: 768px) {
      .page-header {
        padding: 4rem 1rem 2rem;
      }

      .contact-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .left-column {
        gap: 1.5rem;
      }

      .contact-form {
        padding: 1.5rem;
      }

      .submit-button {
        width: 100%;
        text-align: center;
      }

      .container {
        padding: 0 1rem;
      }

      .map-container {
        height: 250px;
      }
    }

    .hidden {
      display: none;
    }
  </style>
</Layout> 