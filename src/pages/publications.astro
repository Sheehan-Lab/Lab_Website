---
import Layout from '../layouts/Layout.astro';
import { getPublications, getFeaturedPublications } from '../utils/sanity';

// Fetch publications from Sanity CMS
let publications = [];
let featuredPublications = [];
let error = null;

try {
  [publications, featuredPublications] = await Promise.all([
    getPublications(),
    getFeaturedPublications()
  ]);
} catch (e) {
  error = e.message;
  console.error('Error fetching publications:', e);
}

// Group publications by year
const publicationsByYear = publications.reduce((acc, pub) => {
  if (!acc[pub.year]) {
    acc[pub.year] = [];
  }
  acc[pub.year].push(pub);
  return acc;
}, {} as Record<number, typeof publications>);

const years = Object.keys(publicationsByYear).map(Number).sort((a, b) => b - a);

// Helper function to format authors
function formatAuthors(authors: string[]): string {
  if (authors.length === 1) return authors[0];
  if (authors.length === 2) return `${authors[0]} and ${authors[1]}`;
  return `${authors.slice(0, -1).join(', ')}, and ${authors[authors.length - 1]}`;
}

// Helper function to build citation
function formatCitation(pub: any): string {
  const authors = formatAuthors(pub.authors);
  let citation = `${authors}. "${pub.title}." <em>${pub.journal}</em>`;
  
  if (pub.volume || pub.issue || pub.pages) {
    citation += ` ${pub.year}`;
    if (pub.volume) citation += `;${pub.volume}`;
    if (pub.issue) citation += `(${pub.issue})`;
    if (pub.pages) citation += `:${pub.pages}`;
  } else {
    citation += ` (${pub.year})`;
  }
  
  citation += '.';
  return citation;
}
---

<Layout title="Publications | Sheehan Lab">
  <main>
    <section class="hero">
      <div class="hero-content">
        <h1>Publications</h1>
        <p>Our research contributions to the scientific community</p>
      </div>
    </section>

    <section class="content-section">
      <div class="container">
        {error ? (
          <div class="error-message">
            <h2>üîß Unable to load publications</h2>
            <p>Please ensure the Sanity CMS is properly configured.</p>
            <details>
              <summary>Technical details</summary>
              <p>{error}</p>
            </details>
          </div>
        ) : publications.length === 0 ? (
          <div class="empty-message">
            <h2>üìù No publications found</h2>
            <p>Add publications through the Sanity Studio to see them here.</p>
          </div>
        ) : (
          <>
            {featuredPublications.length > 0 && (
              <section class="featured-section">
                <h2>Featured Publications</h2>
                <div class="featured-publications">
                  {featuredPublications.map((pub) => (
                    <article class="publication featured">
                      <div class="publication-content">
                        <h3 class="publication-title">{pub.title}</h3>
                        <p class="publication-authors">{formatAuthors(pub.authors)}</p>
                        <div class="publication-details">
                          <span class="journal">{pub.journal}</span>
                          <span class="year">({pub.year})</span>
                          {pub.volume && <span class="volume">Vol. {pub.volume}</span>}
                          {pub.issue && <span class="issue">Issue {pub.issue}</span>}
                        </div>
                        {pub.abstract && (
                          <p class="abstract">{pub.abstract}</p>
                        )}
                        <div class="publication-links">
                          {pub.doi && (
                            <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer" class="link-button">
                              DOI
                            </a>
                          )}
                          {pub.pmid && (
                            <a href={`https://pubmed.ncbi.nlm.nih.gov/${pub.pmid}/`} target="_blank" rel="noopener noreferrer" class="link-button">
                              PubMed
                            </a>
                          )}
                          {pub.url && (
                            <a href={pub.url} target="_blank" rel="noopener noreferrer" class="link-button">
                              Full Text
                            </a>
                          )}
                        </div>
                      </div>
                    </article>
                  ))}
                </div>
              </section>
            )}

            <section class="all-publications-section">
              <h2>All Publications</h2>
              <div class="publication-stats">
                <span class="stat">
                  <strong>{publications.length}</strong> publications
                </span>
                <span class="stat">
                  <strong>{years.length}</strong> years of research
                </span>
              </div>

              {years.map((year) => (
                <div class="year-section">
                  <h3 class="year-heading">{year}</h3>
                  <div class="publications-list">
                    {publicationsByYear[year].map((pub) => (
                      <article class="publication">
                        <div class="publication-content">
                          <h4 class="publication-title">{pub.title}</h4>
                          <div class="citation" set:html={formatCitation(pub)} />
                          <div class="publication-links">
                            {pub.doi && (
                              <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer" class="link-button small">
                                DOI
                              </a>
                            )}
                            {pub.pmid && (
                              <a href={`https://pubmed.ncbi.nlm.nih.gov/${pub.pmid}/`} target="_blank" rel="noopener noreferrer" class="link-button small">
                                PubMed
                              </a>
                            )}
                            {pub.url && (
                              <a href={pub.url} target="_blank" rel="noopener noreferrer" class="link-button small">
                                Full Text
                              </a>
                            )}
                          </div>
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              ))}
            </section>
          </>
        )}
      </div>
    </section>
  </main>

  <style>
    .hero {
