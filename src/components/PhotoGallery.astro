---
interface Photo {
  src: string;
  alt: string;
  caption?: string;
}

interface Props {
  photos: Photo[];
  title?: string;
  description?: string;
}

const { photos, title, description } = Astro.props;
---

<section class="photo-gallery">
  <div class="container">
    {title && <h2>{title}</h2>}
    {description && <p class="section-intro">{description}</p>}
    <div class="photo-grid">
      {photos.map(photo => (
        <div class="photo-card">
          <img src={photo.src} alt={photo.alt} loading="lazy" />
          {photo.caption && <p class="photo-caption">{photo.caption}</p>}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .photo-gallery {
    padding: 6rem 0;
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h2 {
    text-align: center;
    color: var(--emory-primary);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .section-intro {
    text-align: center;
    color: #4a5568;
    font-size: 1.2rem;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .photo-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .photo-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .photo-caption {
    padding: 1.25rem;
    color: #4a5568;
    font-size: 1rem;
    text-align: center;
    margin: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .photo-gallery {
      padding: 4rem 1rem;
    }

    .photo-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    h2 {
      font-size: 1.75rem;
    }

    .section-intro {
      font-size: 1.1rem;
      padding: 0 1rem;
    }

    .photo-card img {
      height: 250px;
    }
  }
</style> 